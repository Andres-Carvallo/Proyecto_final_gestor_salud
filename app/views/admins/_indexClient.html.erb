
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="colab-table">
        <table style="display: block;" id="tablec1">
            <h3 class="d-flex  justify-content-center">Agregar Nuevos Clientes</h3>
            <div class="mb-4 d-flex justify-content-center">
              <button type="button" class="btn btn-dark" id="client-button">Nuevo Cliente</button>
            </div >
            <div id="client-form" class="mt-4 mb-4" style="display: none;">
              <%= render '/clients/form2', client: @client %>
            </div>
            <thead>
              <h1 style="display: block;" id="tablech1">Este Mes</h1>
              <h1  style="display: none;" id="hiddench1">Mes pasado</h1>
              <h2 class="text-center">Clientes</h2>
              <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Rut</th>
                <th>Monto Pagado</th>
                <th>Total Deuda</th>
                <th colspan="3"></th>
              </tr>
            </thead>
    
            <tbody>
              <% @clients.each do |client| %>
              <tr>
                <td class="align-middle"><%= link_to client.name, client%></td>
                <td class="align-middle"><%= client.phone_number %></td>
                <td class="align-middle"><%= client.rut %></td>
                <td class="align-middle"><%= client.paid_out %></td>
                <td class="align-middle"><%= client_total_debt(client) %></td>
                <td class="align-middle"><button type="button" class="destroy_colab btn btn-dark"><%= link_to 'Borrar', client, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <table style="display: none;" id="tablec2">
  
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Rut</th>
                <th>Monto Pagado</th>
                <th>Total Deuda</th>
                <th colspan="3"></th>
              </tr>
            </thead>
      
            <tbody>
              <% @clients_last_month.each do |client| %>
              <tr>
                <td class="align-middle"><%= link_to client.name, client%></td>
                <td class="align-middle"><%= client.phone_number %></td>
                <td class="align-middle"><%= client.rut %></td>
                <td class="align-middle"><%= client.paid_out %></td>
                <td class="align-middle"><%= client_total_debt(client) %></td>
                <td class="align-middle"><button type="button" class="destroy_colab btn btn-dark"><%= link_to 'Borrar', client, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
              </tr>
              <% end %>
            </tbody>
      
          </table>
        </div>


    </div>
  
      

    

  </div>
  <a class="carousel-control-prev" id="carousel-control-prev-cliente" role="button" >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" id="carousel-control-next-cliente" role="button">
    <span class="sr-only">Next</span>
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>

