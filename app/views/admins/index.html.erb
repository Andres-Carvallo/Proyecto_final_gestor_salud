<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Administradores</h1>
  

  
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <%if current_user.admin.name == admin.name %>
            <td>
              <div class="d-flex"> 
                <strong>*</strong>
                <strong><%=admin.name %></strong>
              </div>
            </td>
          <%else%>
            <td><%= admin.name %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <hr>
  <br>
  
  <h1>Profesionales</h1>

  
  <table>
    <h3 class="d-flex  justify-content-center">Agregar Nuevo Profesional</h3>
    <div class="mb-4 d-flex justify-content-center">
      <button type="button" class="btn btn-dark" id="collaborator-button">Nuevo Profesional </button>
    </div >
    <div id="collaborator-form" class="mt-4 mb-4">
      <%= render '/collaborators/form2', collaborator: @collaborator %>
    </div>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Telefono</th>
        <th>Porcentaje de ganancia</th>
        <th>Monto de ganancia</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @collaborators.each do |collaborator| %>
        <tr>
          <td><%= collaborator.name %></td>
          <td><%= collaborator.email %></td>
          <td><%= collaborator.phone_number %></td>
          <td><%= collaborator.percentage_profit %></td>
          <td><%= collaborator.profit_amount %></td>
          <td><%= link_to 'Show', collaborator %></td>
          <td><%= link_to 'Edit', edit_collaborator_path(collaborator) %></td>
          <td><%= link_to 'Destroy', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <hr>
  <br>
  <h1>Clientes</h1>
  
  <table>
    <h3 class="d-flex  justify-content-center">Agregar Nuevos Clientes</h3>
    <div class="mb-4 d-flex justify-content-center">
      <button type="button" class="btn btn-dark" id="client-button">Nuevo Cliente</button>
    </div >
    <div id="client-form" class="mt-4 mb-4">
      <%= render '/clients/form2', client: @client %>
    </div>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Telefono</th>
        <th>Rut</th>
        <th>Monto Pagado</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.phone_number %></td>
          <td><%= client.rut %></td>
          <td><%= client.paid_out %></td>
          <td><%= link_to 'Show', client %></td>
          <td><%= link_to 'Edit', edit_client_path(client) %></td>
          <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

</div>

  