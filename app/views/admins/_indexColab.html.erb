<h2>Profesionales</h2>
<table>
  <h3 class="d-flex  justify-content-center">Agregar Nuevo Profesional</h3>
  <div class="mb-4 d-flex justify-content-center">
    <button type="button" class="btn btn-dark" id="collaborator-button">Nuevo Profesional </button>
  </div >
  <div id="collaborator-form" style="display: none;" class="mt-4 mb-4" >
    <%= render '/collaborators/form2', collaborator: @collaborator %>
  </div>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Porcentaje de ganancia</th>
      <th>Monto por servicio</th>
      <th>Total Bruto</th>
      <th>Total Liquido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.name %></td>
        <td><%= collaborator.percentage_profit %></td>
        <td><%= collaborator.profit_amount %></td>
        <td><%= colab_total_amount(collaborator) %></td>
        <td><%= colab_total_to_pay(collaborator) %></td>
        <td><%= link_to 'Show', collaborator %></td>
        <td><%= link_to 'Edit', edit_collaborator_path(collaborator) %></td>
        <td><%= link_to 'Destroy', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

