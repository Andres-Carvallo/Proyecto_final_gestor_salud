
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="colab-table">
        <table style="display: block;" id="table1">
            <h3 class="d-flex  justify-content-center">Agregar Nuevo Profesional</h3>
            <div class="mb-4 d-flex justify-content-center">
              <button type="button" class="btn btn-dark" id="collaborator-button">Nuevo Profesional </button>
            </div >
            <div id="collaborator-form" style="display: none;" class="mt-4 mb-4" >
              <%= render '/collaborators/form2', collaborator: @collaborator %>
            </div>
            <thead>
              <h1 style="display: block;" id="tableh1">Este Mes</h1>
              <h1  style="display: none;" id="hiddenh1">Mes pasado</h1>
              <h2 class="text-center">Profesionales</h2>
              <tr>
                <th>Nombre</th>
                <th>% por servicio</th>
                <th>Monto por servicio</th>
                <th>Total Bruto</th>
                <th>Total Liquido</th>
                <th colspan="3"></th>
              </tr>
            </thead>
    
            <tbody>
              <% @collaborators.each do |collaborator| %>
                <tr>
                  <td class="align-middle"><%= link_to collaborator.name, collaborator%></td>
                  <td class="align-middle"><%= collaborator.percentage_profit %></td>
                  <td class="align-middle"><%= collaborator.profit_amount %></td>
                  <td class="align-middle"><%= colab_total_amount(collaborator) %></td>
                  <td class="align-middle"><%= colab_total_to_pay(collaborator) %></td>
                  <td class="align-middle"><button type="button" class="destroy_colab btn btn-dark"><%= link_to 'Borrar', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <table style="display: none;" id="table2">
  
            <thead>
              <tr>
                <th>nombre</th>
                <th>% por servicio</th>
                <th>Monto por servicio</th>
                <th>Total Bruto</th>
                <th>Total Liquido</th>
                <th colspan="3"></th>
              </tr>
            </thead>
      
            <tbody>
              <% @collaborators_last_month.each do |collaborator| %>
                <tr>
                  <td class="align-middle"><%= link_to collaborator.name, collaborator%></td>
                  <td class="align-middle"><%= collaborator.percentage_profit %></td>
                  <td class="align-middle"><%= collaborator.profit_amount %></td>
                  <td class="align-middle"><%= colab_total_amount(collaborator) %></td>
                  <td class="align-middle"><%= colab_total_to_pay(collaborator) %></td>
                  <td class="align-middle"><button type="button" class="destroy_colab btn btn-dark"><%= link_to 'Borrar', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
                </tr>
              <% end %>
            </tbody>
      
          </table>
        </div>


    </div>
  
      

    

  </div>
  <a class="carousel-control-prev"  id="carousel-control-prev"role="button" >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" id="carousel-control-next" role="button">
    <span class="sr-only">Next</span>
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>





