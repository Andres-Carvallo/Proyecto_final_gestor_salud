<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Atenciones</h1>
  
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Monto unitario</th>
        <th>Nombre Cliente</th>
        <th>Nombre Profesional</th>
        <th>Numero de atenciones</th>
        <th>Monto total</th>
        <th>Calificaci√≥n</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td class="align-middle"><%= link_to service.name, service%></td>
          <td class="align-middle"><%= service.amount %></td>
          <td class="align-middle"><%= service.client.name %></td>
          <td class="align-middle"><%= service.collaborator.name %></td>
          <td class="align-middle"><%= service.session %></td>
          <td class="align-middle"><%= service.bill %></td>
          <td class="align-middle"><%= service.score %></td>
          <td class="align-middle"><button type="button" class="destroy_colab btn btn-dark"><%= link_to 'Borrar', service, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  <div class="bg-secondary text-white backfooter" >

    <%= link_to 'Back', admins_path %>
  </div>

</div>
